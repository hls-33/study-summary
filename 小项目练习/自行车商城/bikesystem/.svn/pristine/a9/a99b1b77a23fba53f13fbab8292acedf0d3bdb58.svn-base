@CHARSET "UTF-8";
*{
	margin: 0;
	padding: 0;
	font-family:"楷体";
	background-color: rgb(254,242,204);
}
#top-div{
	width:90%;
	margin: auto;
	margin-top:10px; 
	text-align: center;
}
#alogin-div{
	width:440px;
	margin: auto;
	border:1px solid gray;
	box-shadow: 5px 5px 5px gray;
}
#alogin-div p{
	width:90%;
	height:40px;
	line-height: 30px;
	margin-top:30px;
	margin: auto;
	display: inline-block;
	height:60px;
	line-height: 60px;
	position: relative;
}
#alogin-div p img{
	width:60px;
	height:60px;
}
p input{
	width:51%;
	height:40px;
	position: relative;
	top:-20px;
	background-color: white;
}
.content{
	position: relative;
	top:-15px;
	left:10px;
	font-size:16px;
	color:red;
}
.contentck{
	width:135px;
	height:40px;
	position: absolute;
	right:5px;
	top:13px;
	color:red;
	margin-left:5px;
	font-size:16px;
}
p:nth-of-type(3){
	position: relative;
	top:13px;
	font-size:18px;
}
p:nth-of-type(3) input{
	position: relative;
	top:3px;
	width:42%;
	font-weight: bolder;
}
#checkspan{
	width:100%;
	height:30px;
	display:inline-block;
	line-height: 30px;
	color:red;
	font-size:16px;
	position: relative;
	top:20px;
	text-align: center;
}
p:nth-of-type(4){
	position: relative;
	top:40px;
	left:30px;
}
p:nth-of-type(4) input{
	background-color: rgb(194,233,214);
	color:rgb(16,132,122);
	font-size:18px;
	font-weight: bolder;
	margin-left: 20px;
}
p:nth-of-type(5){
	display:inline-block;
	position: relative;
	left:200px;
	top:14px;
	color:rgb(16,132,122);
	border-left:1px solid gray; 
	border-bottom:1px solid gray; 
	box-shadow: 3px 3px 3px silver;
}
p:nth-of-type(5) a{
	color:rgb(16,132,122);
	text-decoration: none;
	margin-left: 10%;
	cursor: pointer;
}
p:nth-of-type(5) input{
	width:16px;
	height:16px;
	display: inline-block;
	position: relative;
	top:4px;
}
p:nth-of-type(5) span:hover{
	color:red;
}
p:nth-of-type(5) a:hover{
	color:red;
}

/*管理员忘记密码CSS设置*/
#losspassword{
	width:440px;
	border:1px solid gray;
	box-shadow: 5px 5px 5px gray;
	position: absolute;
	top:200px;
	left:36%;
	display: none;
}


/*管理员注册页面*/
#create-div{
	width:490px;
	margin: auto;
	border:1px solid gray;
	box-shadow: 5px 5px 5px gray;
}
#create-div table{
	width:100%;
}
#create-div table td{
	height:60px;
	line-height: 60px;
	fone-size:18px;
}
#create-div table tr td:nth-of-type(1){
	width:30%;
	text-align: right;
}
#create-div table tr td:nth-of-type(2){
	width:70%;
}
#create-div table tr td:nth-of-type(2) input{
	width:60%;
	height:40px;
	background-color: white;
}
#create-div table tr td:nth-of-type(2) span{
	display: inline-block;
	width:36%;
	font-size:16px;
	heigth:40px;
	line-height: 40px;
	color:red;
}
th input{
	width:120px;
	height:40px;
	background-color: white;
}
input[type='submit']{
	position: relative;
	left:50px;
}


























