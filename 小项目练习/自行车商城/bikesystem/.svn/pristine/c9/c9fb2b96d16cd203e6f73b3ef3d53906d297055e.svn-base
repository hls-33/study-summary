@CHARSET "UTF-8";
*{
	margin: 0;
	padding: 0;
	font:12px/1.5 tahoma,arial,'Hiragino Sans GB',\5b8b\4f53,sans-serif;
	font-family:arial,'Hiragino Sans GB',"\5b8b\4f53",sans-serif;
}

#top-div{
	background-color: rgb(245,245,245);
	color:rgb(108,108,108);
	width:90%;
	margin: auto;
}
#top-div a{
	text-decoration: none;
	font-size:19px;
	line-height: 24px;
	display: inline-block;
	color:rgb(108,108,108);
	position: relative;
	top:6px;
}
#logo{
}
#top-menu-list{
	position: relative;
	top:-18px;
	margin-left:400px;
}
#top-menu-list2{
	float:right;
	position: relative;
	top:-45px;
}
li{
	display: inline-block;
	font-size:15px;
	list-style-type: none;
	line-height: 24px;
	height:24px;
	margin-left: 30px;
}
#top-menu-list2 li a{
	font-size:15px;
	display: inline-block;
	line-height: 24px;
	height:24px;
}
#logo:hover{
	color:blue;
}
 li:hover{
	color:red;
	cursor: pointer;
}
#top-menu-list2 li a:hover{
	color:red;
	cursor: pointer;
}


#show-div{
	width:90%;
	margin: auto;
	height:508px;
	margin-top:20px;
}
#list-div,#show-item-div{
	float:left;
	height:100%;
}
#list-div{
	width:20%;
	margin-left: 8%;
	background-color: rgb(255,106,5);
	position: relative;
}
#list-div span{
	display: inline-block;
	width:100%;
	height:50px;
	line-height: 50px;
	text-align: center;
	font-size:24px;
	color:rgb(0,176,240);
	background-color:rgb(219,218,241);
}
#bike-info{
	display:block;
	list-style-type: none;
	width:100%;
	height:100%;
}
#bike-info li{
	display: block;
	height:50px;
	width:80%;
	line-height: 50px;
	text-align:center;
	color:white;
	font-weight:bolder;
	border-bottom: 1px solid gray;
}
.bikeinfo{
	line-height:50px;
	background-color: rgb(233,248,255);
	display:block;
	height:458px;
	position: absolute;
	margin-left:40%;
	top:50px;
	width:200%;
	z-index: 10;
	font-size:15px;
	color:gray;
	border-bottom: 1px solid gray;
}
.introp{
	width:100%;
	text-align:left;
	font-size:19px;
	color:block;
	line-height: 40px;
	border-bottom: 1px solid gray;
	font-weight: bolder;
}
.introp img{
	width:40px;
	height:40px;
}



#show-shop-div{
	width:65%;
	margin-left: 3px;
}
#chose-div{
	width:100%;
	height:40px;
}
#chose-div ul{
	list-style: none;
}
#chose-div ul li{
	display: inline-block;
	line-height: 40px;
	font-size:18px;
	font-weight: bolder;
	width:120px;
	text-align:center;
	height:40px;
	border-radius: 10px;
}
#chose-div ul li:hover{
	color:white;
	background-color:rgb(255,106,5);
}
#shopshow{
	width:100%;
	margin-top: 10px;
}
.shopinfo{
	display:inline-block;
	width:140px;
	height:190px;
	margin-left: 35px;
	margin-bottom: 30px;
}
.shopinfo img{
	width:150px;
	height:160px;
}


#bottom-div{
	text-align: center;
	z-index:2;
	background-color: #d2d3c9197219194;
	width:90%;
	margin: auto;
}
#bottom-div ul{
	list-style: none;
	text-align: center;
	width:80%;
	margin:auto;
	display:block;
	background-color:  #d2d3c9197219194;
}
#bottom-div ul li{
	display: inline-block;
	margin-top:5px;
	text-align: center;
}
#bottom-div ul li a{
	text-decoration: none;
	color:gray;
	font-size:16px;
	display: inline-block;
	width:100px;
	height:40px;
	line-height: 40px;
}
#bottom-div ul li:hover{
	background-color: rgb(209,209,175);
}
#bottom-div ul li:hover a{
	color:black;
	background-color: rgb(240,240,240);
}
#bottom-div p{
	color:gray;
	font-family: "宋体";
	background-color:silver;
	font-size:14px;
	line-height: 20px;
}