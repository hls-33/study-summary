@CHARSET "UTF-8";
*{
	margin: 0px;
	padding: 0px;
	font:12px/1.5 tahoma,arial,'Hiragino Sans GB',\5b8b\4f53,sans-serif;
	font-family:arial,'Hiragino Sans GB',"\5b8b\4f53",sans-serif;
}
<!--登录页面CSS-->
#top-div,#middle-div{
	width: 100%;
}
#top-div{
	height:100px;
	background-color:rgb(255,242,204);
}
#top-div img{
	margin-top:14px;
	margin-left: 40px;
}
#change-a{
	display: block;
	position: absolute;
	right:170px;
	top:18px;
	text-decoration: none;
	color:rgb(16,170,240);
}
#change-a img{
	width:40px;
	height:40px;
}
#change-a span{
	position: relative;
	top:-12px;
}
#change-a:hover{
	color:red;
}
#middle-div{
	position: relative;
	height:85%;
}
#middle-div img{
	width:100%;
	height:100%;
	position: relative;
	z-index:1;
}
#login-div{
	background-color:transparent;
	width:360px;
	height:400px;
	position: absolute;
	top:30px;
	left:200px;
	z-index:10;
}
#login-div p{
	width:100%;
	height:40px;
	line-height: 30px;
	margin-top:26px;
}
#login-div p img{
	width:60px;
	height:60px;
}
p input{
	width:51%;
	height:40px;
	position: relative;
	top:-20px;
}
.content{
	position: relative;
	top:-15px;
	left:10px;
	font-size:10px;
	color:red;
}
#checkspan{
	font-size:10px;
}
.contentck{
	width:135px;
	height:40px;
	position: absolute;
	right:0;
	top:2;
	color:red;
	margin-left:5px;
	font-size:16px;
}
p:nth-of-type(3){
	position: relative;
	top:14px;
	font-size:18px;
}
p:nth-of-type(3) input{
	position: relative;
	top:3px;
	width:42%;
	font-weight: bolder;
}
#checkspan{
	width:100%;
	height:30px;
	display:inline-block;
	line-height: 30px;
	color:red;
	font-size:16px;
	position: relative;
	top:20px;
	text-align: center;
}
p:nth-of-type(4){
	position: relative;
	top:30px;
	left:30px;
}
p:nth-of-type(4) input{
	background-color: rgb(194,233,214);
	color:rgb(16,132,122);
	font-size:18px;
	font-weight: bolder;
	margin-left: 20px;
}
p:nth-of-type(5){
	display:inline-block;
	position: relative;
	left:200px;
	top:20px;
	color:rgb(16,132,122);
}
p:nth-of-type(5) a{
	color:rgb(16,132,122);
	text-decoration: none;
}
p:nth-of-type(5) input{
	width:16px;
	height:16px;
	display: inline-block;
	position: relative;
	top:4px;
}
p:nth-of-type(5) span:hover{
	color:red;
}
p:nth-of-type(5) a:hover{
	color:red;
}

/*忘记密码CSS*/
#losspassword{
	background-color: rgb(222,222,224);
	width:440px;
	height:400px;
	position: absolute;
	top:30px;
	left:200px;
	z-index:40;
	display: none;
}
#losspassword p{
	margin-left:5%;
	display: inline-block;
	width:30%;
	height:40px;
	line-height: 40px;
	font-size:16px;
}
#losspassword input{
	width:50%;
	background-color: white;
	height:30px;
}
#losspassword button{
	width:120px;
	height:30px;
	text-align: center;
	line-height: 30px;
	background-color: white;
	margin-left: 30%;
	margin-top: 20px;
	margin-bottom: 20px;
	font-size:16px;
}
#getphone{
	width:100%;
	line-height: 40px;
	text-align: center;
	font-size:16px;
}
#closeimg{
	width:30px;
	height:30px;
	position: absolute;
	top:10px;
	right:20px;
	color:red;
	font-size:20px;
	font-weight: bolder;
	border: 1px solid black;
	text-align: center;
	line-height: 30px;
}


#return-div img{
	width:60px;
	height:60px;
}
#return-div a{
	color:rgb(16,132,122);
	text-decoration: none;
}
#return-div:hover a{
	color:red;
}
@keyframes move{
	from{top:560px;left:800px;}
	to{top:570px;left:800px;}
}
#return-div{
	position: fixed;
	z-index:10;
	animation-name:move;
	animation-duration:2s;
	animation-direction:alternate;
	animation-iteration-count:infinite;
}




















