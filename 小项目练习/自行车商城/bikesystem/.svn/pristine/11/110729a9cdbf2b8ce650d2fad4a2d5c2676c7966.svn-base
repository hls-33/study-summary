@CHARSET "UTF-8";
/* 本页的css修改 */

a{
	text-decoration: none;
}
#top-bm a{
	color:rgba(0,0,0,0.7);
}

/* /hp/imagecolor.jsp的css start */
#color-span1 {
	width: 100px;
	height: 60px;
	border: 1px solid #F2F2F2;
}

img {
	padding: 3px;
	width: 30px;
	height: 30px;
	border: 1px solid #E5DDDD;
	cursor: pointer;
}

img:hover {
	border: 2px solid #E5DFDD;
}

li {
	list-style-type: none;
	color: black;
}

.second {
	width: 40px;
	height: 30px;
	display: none;
	line-height: 30px;
	font-weight: bold;
}

.second>span:hover {
	color: black;
}

.first>span:hover>.second {
	display: block;
}

.first span:nth-of-type(1) .second {
	position: absolute;
	left: 665px;
	top: 440px;
}

.first span:nth-of-type(2) .second {
	position: absolute;
	left: 715px;
	top: 440px;
}

.first span:nth-of-type(3) .second {
	position: absolute;
	left: 760px;
	top: 440px;
}

/*  end */

/* /hp/image.jsp的css start */
#img {
	display: block;
	width: 400px;
	height: 370px;
	margin: auto;
	border-right: 1px solid #E5DDDD;
}

#img_bottom {
	width: 400px;
	height: 100px;
	margin: auto;
	padding-left: 2px;
}

#img_bottom>img {
	height: 60px;
	width: 40px;
	margin: 6px;
}
	/* 已出租状态下的预约按钮 */
