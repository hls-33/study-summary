@CHARSET "UTF-8";
table{
	width:100%;
}
.good_div img{
	width:80px;
	height:80px;
}
.good_div{
	height:150px;
	border:1px solid #ECECEC;
}
.good_div:hover{
	border:1px solid #979797;
	
}
.content{
	height:80px;
	position:relative;
	top:10px;
}
.content td{
	font:15px 黑体;
	color:#3C3C3C;
}
.content td:nth-of-type(1){
	width:280px;
}
.content td:nth-of-type(2){
	width:190px;
	text-align:center;
}
.content td:nth-of-type(3){
	width:150px;
	text-align:center;
}
.content td:nth-of-type(4){
	width:115px;
	text-align:center;
}
.content td:nth-of-type(5){
	width:145px;
	text-align:center;
}
.gooddescription span{
	position:relative;
	top:10px;
	left:20px;
}
.content_tittle_div{
	height:30px;
	background-color:#F1F1F1;
	line-height:30px;
}
.destroy_div{
	width:30px;
	height:30px;
	position:relative;
	top:-30px;
	left:830px;
	opacity:0;
}
.destroy_div img{
	width:30px;
	height:30px;
}
.destroy_div:hover{
	cursor:pointer;
}
/*模态窗口样式*/
#model_div{
	width:1357px;
	height:1050px;;
	background-color:#6B6B6B;
	position:absolute;
	top:-8px;
	left:-8px;
	opacity:0.5;
	display:none;
}
#model_content_div{
	width:400px;
	height:150px;
	border-radius:10px;
	background-color:#FFFFFF;
	position:fixed;
	top:150px;
	left:500px;
	display:none;
}
#model_content_div div:nth-of-type(1){
	width:200px;
	position:relative;
	top:25px;
	left:20px;
	font:16px 黑体;
	
}
#model_content_div div:nth-of-type(2){
	width:300px;
	position:relative;
	top:45px;
	left:20px;
	font:14px 黑体;
}
#button_div{
	width:200px;
	position:relative;
	top:65px;
	left:130px;
}
#button_div input:nth-of-type(1){
	border:1px solid #59B0FF;
	width:50px;
	height:25px;
	background-color:#59B0FF;
	color:white;
	border-radius:5px;
	font:14px 黑体;
	
}
#button_div input:nth-of-type(1):hover{
	background-color:#006ACA;
}
#button_div input:nth-of-type(2){
	border:1px solid #6C6C6C;
	width:50px;
	height:25px;
	background-color:#6C6C6C;
	color:white;
	border-radius:5px;
	font:14px 黑体;
	
}
#button_div input:nth-of-type(2):hover{
	background-color:#2C2C2C;
}

















